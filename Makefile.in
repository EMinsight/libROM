.SUFFIXES: .o .C

LIBROM = libROM.a

CXX		= @CXX@
CXXFLAGS	= @CXX_FLAGS@
CPPFLAGS	= @CPPFLAGS@ @INC_PATH@
LDFLAGS		= @LD_FLAGS@ @LIB_PATH@
LDLIBS		= $(LIBROM) @LIB_NAME@
AR		= @AR@

OBJS = Matrix.o \
       Vector.o \
       BasisReader.o \
       BasisWriter.o \
       SVDBasisGenerator.o \
       IncrementalSVD.o \
       IncrementalSVDFastUpdate.o \
       IncrementalSVDNaive.o \
       IncrementalSVDBasisGenerator.o \
       IncrementalSVDTimeStepper.o \
       StaticSVD.o \
       StaticSVDBasisGenerator.o \
       StaticSVDTimeStepper.o \
       Database.o \
       HDFDatabase.o \
       Utilities.o \
       ParallelBuffer.o

default: lib

all: lib random_test smoke_test

lib: $(OBJS)
	ar ru $(LIBROM) $(OBJS)

random_test: lib random_test.o
	$(CXX) $(LDFLAGS) -o random_test random_test.o $(LDLIBS)

smoke_test: lib smoke_test.o
	$(CXX) $(LDFLAGS) -o smoke_test smoke_test.o $(LDLIBS)

.C.o :
	$(CXX) $(CXXFLAGS) $(CPPFLAGS) -c $*.C

clean:
	rm -f *.o $(LIBROM) random_test smoke_test
