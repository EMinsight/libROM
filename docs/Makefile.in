dox: Doxyfile
	@mkdir -p @dox_output_dir@.
	@DOXYGEN_BIN@ Doxyfile
	@echo "# $@ was updated at `date` using this Doxyfile:" > $@
	cat Doxyfile >> $@
	cp @dox_output_dir@rom.tag @dox_output_dir@rom-dox/html/rom.tag
	@echo "Created documentation in @dox_output_dir@"
